<?xml version="1.0" encoding="utf-8"?>
<com.annie.demo_slidingmenu.SlideMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.annie.demo_slidingmenu.MainActivity">

    <!--左侧菜单布局-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_menu"/>
    </FrameLayout>


    <!--主界面布局-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_main"/>
    </FrameLayout>


</com.annie.demo_slidingmenu.SlideMenu>
